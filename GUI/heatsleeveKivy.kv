ScreenManager:
    id: screen_manager
    WelcomeScreen:
        id: welcome_screen
        name: 'WelcomeScreen'
        manager: screen_manager 
    LoginScreen: 
        id: login_screen
        name: 'LoginScreen'
        manager: screen_manager
    Dashboard:
        id: dashboard
        name: 'Dashboard'
        manager:screen_manager
        username: login_screen.username

<WelcomeScreen@Screen>
    name: "main"

    MDLabel:
        text: "Welcome to Heatsleeve"
        halign: "center"
        font_style: "H1"

    MDRectangleFlatButton:
        text: "Get Started"
        pos_hint: {"center_x": 0.5, "center_y":0.2}
        on_release:
            app.root.current = "LoginScreen"
            root.manager.transition.direction = "left"

<LoginScreen>:
    name: 'login_screen' 
    MDLabel:
        text: "What would you like us to call you?"
        halign: "center"
        pos_hint: {"center_y":0.7}
        font_style: "H3"

    MDTextField:
        id: username_text_field
        size_hint: 0.75, None
        height: "70dp"
        pos_hint: {"center_x":0.5, "center_y": 0.5}

    MDRaisedButton:
        text: "Go Back"
        pos_hint: {'center_x': 0.1 , 'center_y': 0.1}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

    MDRectangleFlatButton:
        text: "Next"
        pos_hint: {'center_x': 0.9 , 'center_y': 0.1}
        on_release:
            root.save_username()
            

<Dashboard>:
    name: 'dashboard'
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Hello "+root.username
            halign: "center"
            font_style:"H3"
            size_hint: (1,0.2)
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: "Current Weather Conditions"
                    halign:"center"
                    font_style:"H4"
                BoxLayout:
                    orientation: 'horizontal'
                    MDProgressBar:
                        orientation: 'vertical'
                        value: root.temperature
                    MDLabel:
                        text: str(root.temperature)+u"\N{DEGREE SIGN}"+"F"
                        halign: "left"
                MDLabel:
                    text:""
                MDLabel:
                    text: ""
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: "Workout History"
                    halign: "center"
                    font_style: "H4"

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text:"Average Heartrate"
                        halign: "center"
                        size_hint: (1, 0.2)
                    MDLabel:
                        text: root.step_count_text
                        size_hint: (1,0.8)
                        halign: "center"
                        font_style: "H2"
                MDRectangleFlatButton:
                    text: "CountUp"
                    pos_hint: {'center_x': 0.9 , 'center_y': 0.1}
                    on_release:


                MDLabel:
                    text:""
                MDLabel:
                    text:""

            MDLabel:
                text:""
